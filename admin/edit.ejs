<%- include('../header') %>


<div class="container">
    <h1><%= title %></h1>
    <form method="post" class="form-horizontal" enctype='multipart/form-data'>
        <div class="form-group">
            <label class="col-md-1 control-label" for="name">Name</label>
            <div class="col-md-6">
                <input type="text" class="form-control" name="name" id="name" value="<%= dorm.name %>">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1 control-label" for="desc">Desc</label>
            <div class="col-md-6">
                <textarea type="text" class="form-control" name="desc" id="desc"><%= dorm.desc %></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1 control-label" for="total">Total</label>
            <div class="col-md-1">
                <input type="number" class="form-control" name="total" id="total" min="0" required="required" value="<%= dorm.total %>">
            </div>
            <label class="col-md-1 control-label" for="address">Address</label>
            <div class="col-md-1">
                <input type="text" class="form-control" name="address" id="address" required="required" value="<%= dorm.address %>">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1 control-label" for="img">Image</label>
            <div class="col-md-8">
                <input type="file" class="form-control" name="img" id="img">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1 control-label" for="eating">Eating</label>
            <div class="col-md-1">
                <input type="number" class="form-control" name="eating" id="eating" min="0" max="101" required="required" value="<%= dorm.eating %>">
            </div>
            <label class="col-md-1 control-label" for="gym_proximity">Gym Proximity</label>
            <div class="col-md-1">
                <input type="number" class="form-control" name="gym_proximity" id="gym_proximity" min="0" max="101" required="required" value="<%= dorm.gym_proximity %>">
            </div>
            <label class="col-md-1 control-label" for="studying">Studying</label>
            <div class="col-md-1">
                <input type="number" class="form-control" name="studying" id="studying" min="0" max="101" required="required" value="<%= dorm.studying %>">
            </div>
            <label class="col-md-1 control-label" for="availability_first_year_students" 
            ></label>Availability for first year students
            </label>
            <div class="col-md-1">
                <input type="checkbox" class="form-control" name="availability_first_year_students" id="availability_first_year_students" min="0" max="101"
                <%= dorm.availability_first_year_students %>>
            </div>
            <label class="col-md-2 control-label"s for="type-of-housing">Type of housing
            </label>
            <div class="col-md-1">
                <select name="house_type" id="type-of-housing" value="<%= dorm.house_type %>">
                    <option>
                        traditional residence hall
                    </option>
                    <option>
                        apartments
                    </option>
                </select>
            </div>
        </div>

        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>

<%- include("../footer.ejs") %>