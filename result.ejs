<%- include('./header') %>

<div class="main container">
    <div class="row">
        <div class="col-md-8 col-sm-12">
            <div class="info">
                <div class="info-basic">
                    <h2><%= dorm.name %></h2>
                    <h4>Rutgers,New Jersey</h4>
                    <p><%= dorm.desc %></p>
                </div>
                <div class="info-score">
                    <div class="score">
                        <h2><%= dorm.avg_score %></h2>
                        <h4>avg score</h4>
                    </div>
                    <div class="score">
                        <h2><%= dorm.availability_first_year_students %></h2>
                        <h4>availability first year students</h4>
                    </div>
                    <div class="score">
                        <h2><%= dorm.house_type.split(' ')[0] %></h2>
                        <h4>house</h4>
                    </div>
                    <div class="score">
                        <h2>$<%= dorm.total %></h2>
                        <h4>avg rent</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-12 level-list">
            <div class="level-wrapper">
                <div class="level-item">
                    <h4>Avg Score</h4>
                    <div class="progressx">
                        <div class="progress-value">
                           
                        </div>
                    </div>

                    <span class="progress-circle">
                        <%= dorm.avg_score %>
                    </span>
                </div>
                <div class="level-item">
                    <h4>Eating</h4>
                    <div class="progressx">
                        <div class="progress-value" style="width:70%;background: green">

                        </div>
                    </div>

                    <span class="progress-circle" style="background: green">
                        <%= dorm.eating %>
                    </span>
                </div>
                <div class="level-item">
                    <h4>Gym Proximity</h4>
                    <div class="progressx">
                        <div class="progress-value">

                        </div>
                    </div>

                    <span class="progress-circle">
                        <%= dorm.gym_proximity %>
                    </span>
                </div>
                <div class="level-item">
                    <h4>studying</h4>
                    <div class="progressx">
                        <div class="progress-value" style="width:70%;background: green">

                        </div>
                    </div>

                    <span class="progress-circle" style="background: green">
                            <%= dorm.studying %>
                    </span>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <img class="img-responsive"  src="/img/<%= dorm.img %>" />
        </div>
    </div>
</div>
